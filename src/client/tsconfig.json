{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true, 
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": ["*"],
      "~components/*": ["components/*"],
      "~assets/*": ["assets/*"],
      "~pages/*": ["pages/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "bundle",
    "webpack.*",
    "acceptance-tests",
    "jest"
  ]
}